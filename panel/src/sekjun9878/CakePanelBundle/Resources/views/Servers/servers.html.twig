{% extends "sekjun9878CakePanelBundle:Layouts:flatly.html.twig" %}

{% block content %}
    <div class='container'>
        <div class='row'>
            <div class='col-lg-2'>
                {{ knp_menu_render('sekjun9878CakePanelBundle:ServersMenuBuilder:sideMenu', {'nav_type': 'stacked_pills', 'currentClass': 'active'}) }}
            </div>
            <div class='col-md-10'>
                <div class='row'>
                    <div class='col-md-12'>
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Node</td>
                                    <td>Port</td>
                                    <td>Actions</td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for server in servers %}
                                    <tr>
                                        <td>{{ server.id }}</td>
                                        <td>{{ nodes[server.node].domain }}:{{ nodes[server.node].port }} (#{{ nodes[server.node].id }})</td>
                                        <td>{{ server.port }}</td>
                                        <td>
                                            <button type="button" class="btn btn-success btn-xs">Panel</button>
                                            <button type="button" class="btn btn-danger btn-xs">Stop</button>
                                            <button type="button" class="btn btn-warning btn-xs">Remove</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
