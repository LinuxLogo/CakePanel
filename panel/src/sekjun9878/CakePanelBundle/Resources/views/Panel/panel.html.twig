{% extends "sekjun9878CakePanelBundle:Layouts:flatly.html.twig" %}

{% block content %}
    <div class='container'>
        <div class='row'>
            <div class='col-lg-2'>
                {{ knp_menu_render('sekjun9878CakePanelBundle:PanelMenuBuilder:sideMenu', {'nav_type': 'stacked_pills', 'currentClass': 'active'}) }}
            </div>
            <div class='col-md-10'>
                <div class='row'>
                    <div class='col-md-12'>
                        <h1>Power</h1>
                        <hr>
                        <div class='row'>
                            <div class='col-md-4'>
                                <a style='text-decoration:none;' href='/panel/{{ server.id }}/action/start'><button type="button" class="btn btn-success btn-lg btn-block">Start</button></a>
                            </div>
                            <div class='col-md-4'>
                                <button type="button" class="btn btn-danger btn-lg btn-block" disabled="disabled">Stop</button>
                            </div>
                            <div class='col-md-4'>
                                <button type="button" class="btn btn-warning btn-lg btn-block">Restart</button>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-6'>
                                <h1>Status</h1>
                                <hr>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Server Status</h3>
                                    </div>
                                    <div class="panel-body">
                                        RAM:
                                        <div class="progress progress-striped">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                <span class="sr-only">40% Complete (success)</span>
                                            </div>
                                        </div>
                                        TPS:
                                        <div class="progress progress-striped">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                <span class="sr-only">40% Complete (success)</span>
                                            </div>
                                        </div>
                                        CPU:
                                        <div class="progress progress-striped">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                <span class="sr-only">40% Complete (success)</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class='col-md-6'>
                                <h1>Services</h1>
                                <hr>
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Server Status</h3>
                                    </div>
                                    <div class="panel-body">
                                        RAM:
                                        <div class="progress progress-striped">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                <span class="sr-only">40% Complete (success)</span>
                                            </div>
                                        </div>
                                        TPS:
                                        <div class="progress progress-striped">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                <span class="sr-only">40% Complete (success)</span>
                                            </div>
                                        </div>
                                        CPU:
                                        <div class="progress progress-striped">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                                <span class="sr-only">40% Complete (success)</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
